<Window x:Class="WPF1SemesterOpgave.ModalOpretKursus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opret nyt kursus" Height="350" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Beskrivelse label -->
            <RowDefinition Height="*"/>
            <!-- Beskrivelse tekst -->
            <RowDefinition Height="Auto"/>
            <!-- Deltager antal -->
            <RowDefinition Height="Auto"/>
            <!-- Gem og luk -->
        </Grid.RowDefinitions>

        <!-- Kursus titel -->
        <TextBlock Text="Titel:"
                   Grid.Row="0"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="TitelInput"
                 Grid.Row="0"
                 Margin="60,0,0,0"
                 Width="300"/>

        <!-- Beskrivelse label -->
        <TextBlock Text="Beskrivelse:"
                   Grid.Row="1"
                   Margin="0,10,0,0"/>

        <!-- Beskrivelse tekst (flere linjer) -->
        <TextBox x:Name="BeskrivelseInput"
                 Grid.Row="2"
                 Margin="0,5,0,0"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" Height="108" VerticalAlignment="Top"/>

        <!-- Deltager antal -->
        <TextBlock Text="Deltager antal:"
            Grid.Row="2"
            Margin="0,139,0,0" Height="18" VerticalAlignment="Top"/>

        <TextBox x:Name="DeltagerAntalInput"
          Grid.Row="2"
          Margin="200,139,100,78"
          Width="80" Height="18"/>

        <!-- Max antal deltager -->
        <TextBlock Text="Max antal deltager:"
                   Grid.Row="2"
                   Margin="0,175,0,0" Height="60" VerticalAlignment="Top"/>

        <TextBox x:Name="MaxAntalDeltagerInput"
                 Grid.Row="2"
                 Margin="200,175,100,42"
                 Width="80"/>

        <!-- Gem og luk knap -->
        <Button Content="Gem og luk"
                Grid.Row="4"
                Width="100"
                Margin="0,15,0,0"
                HorizontalAlignment="Left"
                Click="GemOgLukButton_Click"/>
    </Grid>
</Window>
