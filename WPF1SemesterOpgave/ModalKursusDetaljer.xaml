<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WPF1SemesterOpgave.ModalKursusDetaljer"
        Title="Kursusdetaljer" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Beskrivelse label -->
            <RowDefinition Height="414.04"/>
            <!-- Beskrivelse tekst -->
            <RowDefinition Height="Auto"/>
            <!-- Deltagerantal -->
            <RowDefinition Height="Auto"/>
            <!-- Luk knap -->
        </Grid.RowDefinitions>

        <!-- Kursus titel -->
        <TextBlock Text="Titel:"
                   Grid.Row="2"
                   VerticalAlignment="Top" Margin="131,101,349,0"/>
        <TextBox x:Name="TitelBox"
                 Grid.Row="2"
                 Margin="130,116,350,273"
                 IsReadOnly="True"
                 Width="300" Height="25"/>

        <!-- Beskrivelse label -->
        <TextBlock Text="Beskrivelse:"
                   Grid.Row="2"
                   Margin="130,145,468,0" Height="16" VerticalAlignment="Top" Width="182"/>

        <!-- Beskrivelse tekst (flere linjer) -->
        <TextBox x:Name="BeskrivelseBox"
                 Grid.Row="2"
                 Margin="130,166,136,166"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Deltagerantal -->
        <TextBlock Text="Deltager antal:"
                   Grid.Row="2"
                   Margin="131,264,519,0" Height="25" VerticalAlignment="Top" Width="130"/>

        <TextBox x:Name="DeltagerAntalBox"
                 Grid.Row="2"
                 IsReadOnly="True" Margin="266,264,350,132" av:LayoutOverrides="HorizontalAlignment"/>

        <!-- Max Antal Deltager -->
        <TextBlock Text="Max antal deltager:"
                   Grid.Row="2"
                   Margin="130,299,518,0" Height="25" VerticalAlignment="Top" Width="132"/>

        <TextBox x:Name="MaxAntalDeltagerBox"
                 Grid.Row="2"
                 Margin="266,299,350,96" 
                 IsReadOnly="True" av:LayoutOverrides="HorizontalAlignment"/>

        <!-- Luk knap -->
        <Button x:Name="gemOgLukButton" Content="Gem og Luk"
                Grid.Row="2"
                Width="80"
                Margin="564,349,0,10"
                HorizontalAlignment="Left"
                Click="LukButton_Click" Height="20"/>
        <TextBox x:Name="textMedlemmer" HorizontalAlignment="Left" Margin="131,61,0,0" TextWrapping="NoWrap" TextAlignment="Center" Text="KURSUSDETALJER" Width="500" Background="LightGray" BorderThickness="0,0,0,0" FontSize="16" Grid.Row="2" VerticalAlignment="Top" av:LayoutOverrides="VerticalAlignment"/>
    </Grid>
</Window>