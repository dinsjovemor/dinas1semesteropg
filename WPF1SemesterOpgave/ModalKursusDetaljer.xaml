<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WPF1SemesterOpgave.ModalKursusDetaljer"
        Title="Kursusdetaljer" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Beskrivelse label -->
            <RowDefinition Height="382"/>
            <!-- Beskrivelse tekst -->
            <!-- Deltagerantal -->
            <!-- Luk knap -->
        </Grid.RowDefinitions>

        <!-- Kursus titel -->
        <TextBlock Text="Titel:"
                   Grid.Row="2"
                   VerticalAlignment="Top" Margin="130,23,350,0" Height="16" av:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
        <TextBox x:Name="TitelBox"
                 Grid.Row="2"
                 Margin="131,44,349,318"
                 IsReadOnly="True" Height="20"/>
       
        <!-- Beskrivelse label -->
        <TextBlock Text="Beskrivelse:"
                   Grid.Row="2"
                   Margin="129,88,137,0" Height="46" VerticalAlignment="Top" Width="182" av:LayoutOverrides="VerticalAlignment, LeftMargin, RightMargin, TopMargin, BottomMargin"/>

        <!-- Beskrivelse tekst (flere linjer) -->
        <TextBox x:Name="BeskrivelseBox"
                 Grid.Row="2"
                 Margin="131,153,519,208"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" Height="21" av:LayoutOverrides="LeftMargin, RightMargin"/>

        <!-- Deltagerantal -->
        <TextBlock Text="Deltager antal:"
                   Grid.Row="2"
                   Margin="266,153,350,0" Height="18" VerticalAlignment="Top" Width="130" av:LayoutOverrides="VerticalAlignment, LeftMargin, RightMargin, TopMargin, BottomMargin"/>

        <TextBox x:Name="DeltagerAntalBox"
                 Grid.Row="2"
                 IsReadOnly="True" Margin="130,188,518,194" av:LayoutOverrides="LeftMargin, RightMargin" Height="0"/>

        <!-- Max Antal Deltager -->
        <TextBlock Text="Max antal deltager:"
                   Grid.Row="2"
                   Margin="266,188,350,0" Height="25" VerticalAlignment="Top" Width="132" av:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>

        <TextBox x:Name="MaxAntalDeltagerBox"
                 Grid.Row="2"
                 Margin="564,365,0,0" 
                 IsReadOnly="True" av:LayoutOverrides="Height, LeftMargin, RightMargin" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Luk knap -->
        <Button x:Name="gemOgLukButton" Content="Gem og Luk"
                Grid.Row="1"
                Width="130"
                Margin="130,64,0,-4"
                HorizontalAlignment="Left"
                Click="LukButton_Click" Height="21" av:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
        <TextBox x:Name="textMedlemmer" HorizontalAlignment="Left" Margin="130,64,0,0" TextWrapping="NoWrap" TextAlignment="Center" Text="KURSUSDETALJER" Width="130" Background="LightGray" BorderThickness="0,0,0,0" FontSize="16" Grid.Row="1" VerticalAlignment="Top" av:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Height="21"/>
    </Grid>
</Window>