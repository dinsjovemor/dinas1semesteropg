<Window x:Class="WPF1SemesterOpgave.TilfoejMedlemTilKursus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tilmeld medlem til kursus"
        Height="300" Width="350">

    <Grid Margin="10">

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="250">

            <TextBlock Text="Vælg kursus:"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- 6 knapper til kurserne -->
            <Button x:Name="KursusButton1"
                    Content="Kursus 1"
                    Height="30"
                    Margin="0,3"
                    Click="KursusButton1_Click"/>

            <Button x:Name="KursusButton2"
                    Content="Kursus 2"
                    Height="30"
                    Margin="0,3"
                    Click="KursusButton2_Click"/>

            <Button x:Name="KursusButton3"
                    Content="Kursus 3"
                    Height="30"
                    Margin="0,3"
                    Click="KursusButton3_Click"/>

            <Button x:Name="KursusButton4"
                    Content="Kursus 4"
                    Height="30"
                    Margin="0,3"
                    Click="KursusButton4_Click"/>

            <Button x:Name="KursusButton5"
                    Content="Kursus 5"
                    Height="30"
                    Margin="0,3"
                    Click="KursusButton5_Click"/>

            <Button x:Name="KursusButton6"
                    Content="Kursus 6"
                    Height="30"
                    Margin="0,3"
                    Click="KursusButton6_Click"/>

        </StackPanel>
    </Grid>
</Window>
